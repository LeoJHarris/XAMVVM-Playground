<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XFWithUITest.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
    Title="Ideapad"
    ios:Page.UseSafeArea="True"
    prism:ViewModelLocator.AutowireViewModel="True"
    AutomationId="HomePage"
    BackgroundColor="White">
    <ContentPage.Content>
        <Grid RowSpacing="5">

            <Label
                Grid.Row="0"
                Margin="0,10,0,0"
                FontSize="Large"
                HorizontalTextAlignment="Center"
                Text="Hey there, Welcome!" />

            <ListView
                x:Name="NoteListView"
                Grid.Row="1"
                HasUnevenRows="True"
                ItemsSource="{Binding NoteList}"
                SeparatorVisibility="None">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame
                                Margin="5,10,5,10"
                                Padding="10,10,10,10"
                                CornerRadius="8"
                                HasShadow="True"
                                IsClippedToBounds="True">
                                <Frame.BorderColor>
                                    <OnPlatform x:TypeArguments="Color">
                                        <OnPlatform.Android>Default</OnPlatform.Android>
                                        <OnPlatform.iOS>DimGray</OnPlatform.iOS>
                                    </OnPlatform>
                                </Frame.BorderColor>
                                <Grid>
                                    <Label
                                        Grid.Row="0"
                                        FontSize="Large"
                                        Text="{Binding IdeaTitle}"
                                        TextColor="#494c50" />
                                    <Label
                                        Grid.Row="1"
                                        FontSize="Small"
                                        Text="{Binding IdeaText}"
                                        TextColor="#797f86" />

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                </Grid>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Frame
                Grid.Row="1"
                Margin="5,10,5,10"
                Padding="10,10,10,10"
                CornerRadius="8"
                HasShadow="True"
                IsClippedToBounds="True"
                IsVisible="{Binding IsEmptyNoteList}">
                <Frame.BorderColor>
                    <OnPlatform x:TypeArguments="Color">
                        <OnPlatform.Android>Default</OnPlatform.Android>
                        <OnPlatform.iOS>DimGray</OnPlatform.iOS>
                    </OnPlatform>
                </Frame.BorderColor>
                <Grid>
                    <Label
                        Grid.Row="0"
                        FontSize="Large"
                        HorizontalTextAlignment="Center"
                        Text="Let's start by adding a new Idea..."
                        TextColor="#797f86"
                        VerticalOptions="CenterAndExpand" />

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                </Grid>
            </Frame>

            <Button
                Grid.Row="2"
                BackgroundColor="DodgerBlue"
                Command="{Binding NewIdeaCommand}"
                FontSize="Large"
                Text="New Idea"
                TextColor="White" />

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
        </Grid>
    </ContentPage.Content>
</ContentPage>